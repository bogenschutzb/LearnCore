@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">@Localizer["ComingSoon"]</h5>
                </div>
                <div class="card-body">
                    <h1>@Localizer["HomeMsg"]</h1>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="now-ui-icons arrows-1_cloud-upload-94"></i> @Localizer["FooterMsg"]
                    </div>
                </div>
            </div>
        </div>       
    </div>
</div>