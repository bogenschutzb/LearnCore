@inject IViewLocalizer Localizer

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">@Localizer["HeaderMsg"]</h5>
                </div>
                <div class="card-body">
                    <div id="UserDetails"></div>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="now-ui-icons arrows-1_cloud-upload-94"></i> @Localizer["FooterMsg"]
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/core/jquery.min.js"></script>
<script>
    function LoadUserDetails() {
        $.ajax({
            url: "@Url.Action("UserDetailsView", "Users")",
            type: "GET",
            cache: false
        }).done(function (results) {
            $("#UserDetails").html(results);
        });
    }

    $(document).ready(function () {
        LoadUserDetails();
    });
</script>